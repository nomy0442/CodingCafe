<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.josee.codingcafe">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".LogIn_Screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Registration_Screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Splash_Screen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Account_Settings_Page"
            android:label="Account Settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".UpdateUserData"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".Profile"
            android:label="@string/profileName"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Password" />
        <activity
            android:name=".ActivityRetrofit"
            android:label="R E T R O F I T"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".PasswordReset"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>